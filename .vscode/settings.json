{
  "editor.formatOnSave": true, // 저장할 때 자동 포맷
  "javascript.format.enable": false, // 기본 JS 포맷 비활성화
  "editor.defaultFormatter": "esbenp.prettier-vscode", // prettier를 기본 포맷터로 설정
  "editor.tabSize": 2, // 들여쓰기 2칸
  "editor.insertSpaces": true, // tab 대신 스페이스 사용
  "editor.wordWrap": "on", // 긴 코드 자동 줄바꿈
  "editor.minimap.enabled": false, // Minimap 비활성화 (화면 깔끔하게)
  "files.trimTrailingWhitespace": true, // 불필요한 공백 자동 제거
  "files.insertFinalNewline": true, // 파일 끝에 자동으로 개행 추가
  "files.autoSave": "onFocusChange", // 다른 파일로 이동 시 자동 저장
  "editor.cursorBlinking": "smooth", // 커서 깜빡임 스타일 변경
  "editor.smoothScrolling": true, // 부드러운 스크롤링 활성화
  "terminal.integrated.cursorBlinking": true, // 터미널에서도 커서 깜빡이기
  "editor.inlineSuggest.enabled": true, // GitHub Copilot 같은 AI 자동완성 활성화
  "github.copilot.enable": true // GitHub Copilot 사용
}
